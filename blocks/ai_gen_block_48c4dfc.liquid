{% doc %}
  @prompt
    Category icons spread horizontally , will need more categories, allow spacing for 10-12 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-icons-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-category-icons-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-category-icons-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.spacing }}px;
    align-items: center;
    justify-items: center;
  }

  .ai-category-icon-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    text-decoration: none;
    color: {{ block.settings.text_color }};
    transition: transform 0.3s ease, opacity 0.3s ease;
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
  }

  .ai-category-icon-item-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    opacity: 0.8;
  }

  .ai-category-icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    border-radius: {% if block.settings.icon_shape == 'circle' %}50%{% elsif block.settings.icon_shape == 'rounded' %}12px{% else %}0{% endif %};
    background-color: {{ block.settings.icon_background_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: {{ block.settings.text_spacing }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    box-shadow: {% if block.settings.shadow_opacity > 0 %}0 {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba({{ block.settings.shadow_color | color_extract: 'red' }}, {{ block.settings.shadow_color | color_extract: 'green' }}, {{ block.settings.shadow_color | color_extract: 'blue' }}, {{ block.settings.shadow_opacity | divided_by: 100.0 }}){% else %}none{% endif %};
  }

  .ai-category-icon-wrapper-{{ ai_gen_id }} img {
    width: {{ block.settings.icon_size | times: 0.6 }}px;
    height: {{ block.settings.icon_size | times: 0.6 }}px;
    object-fit: contain;
  }

  .ai-category-icon-wrapper-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size | times: 0.6 }}px;
    height: {{ block.settings.icon_size | times: 0.6 }}px;
    color: {{ block.settings.icon_color }};
  }

  .ai-category-icon-title-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: {{ block.settings.title_size }}px;
    line-height: 1.2;
    margin: 0;
    color: {{ block.settings.text_color }};
    {% if settings.type_header_capitalize %}text-transform: uppercase;{% endif %}
    letter-spacing: {{ settings.type_header_spacing | divided_by: 1000.0 }}em;
  }

  .ai-category-icon-description-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: {{ block.settings.description_size }}px;
    line-height: {{ settings.type_body_line_height }};
    margin: {{ block.settings.description_spacing }}px 0 0;
    color: {{ block.settings.description_color }};
    letter-spacing: {{ settings.type_body_spacing | divided_by: 1000.0 }}em;
  }

  .ai-category-icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: inherit;
  }

  .ai-category-icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: #ccc;
  }

  @media screen and (max-width: 749px) {
    .ai-category-icons-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.spacing | times: 0.8 }}px;
    }

    .ai-category-icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-category-icon-wrapper-{{ ai_gen_id }} img,
    .ai-category-icon-wrapper-{{ ai_gen_id }} svg {
      width: {{ block.settings.icon_size | times: 0.48 }}px;
      height: {{ block.settings.icon_size | times: 0.48 }}px;
    }

    .ai-category-icon-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-category-icon-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-category-icons-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-icons-container-{{ ai_gen_id }}">
    <div class="ai-category-icons-grid-{{ ai_gen_id }}">
      {% for i in (1..12) %}
        {% liquid
          assign icon_key = 'category_' | append: i | append: '_icon'
          assign title_key = 'category_' | append: i | append: '_title'
          assign description_key = 'category_' | append: i | append: '_description'
          assign link_key = 'category_' | append: i | append: '_link'
          assign enabled_key = 'category_' | append: i | append: '_enabled'

          assign icon = block.settings[icon_key]
          assign title = block.settings[title_key]
          assign description = block.settings[description_key]
          assign link = block.settings[link_key]
          assign enabled = block.settings[enabled_key]
        %}

        {% if enabled %}
          {% if link != blank %}
            <a href="{{ link }}" class="ai-category-icon-item-{{ ai_gen_id }}">
          {% else %}
            <div class="ai-category-icon-item-{{ ai_gen_id }}">
          {% endif %}
            
            <div class="ai-category-icon-wrapper-{{ ai_gen_id }}">
              {% if icon != blank %}
                <img
                  src="{{ icon | image_url: width: 200 }}"
                  alt="{{ title | escape }}"
                  loading="lazy"
                  width="200"
                  height="200"
                >
              {% else %}
                <div class="ai-category-icon-placeholder-{{ ai_gen_id }}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                    <circle cx="9" cy="9" r="2"/>
                    <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
                  </svg>
                </div>
              {% endif %}
            </div>

            {% if title != blank %}
              <h3 class="ai-category-icon-title-{{ ai_gen_id }}">{{ title }}</h3>
            {% endif %}

            {% if description != blank %}
              <p class="ai-category-icon-description-{{ ai_gen_id }}">{{ description }}</p>
            {% endif %}

          {% if link != blank %}
            </a>
          {% else %}
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

